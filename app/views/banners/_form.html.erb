<%= form_with model: @banner do |form| %>
	<div>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
		<% banner.errors.full_messages_for(:title).each do |message|%>
			<div><%= message %></div>
			<% end %>
	</div>	

	<div>
		<%= form.label :body %><br>
		<%= form.text_area :body %>
		<% banner.errors.full_messages_for(:body).each do |message| %>
			<div><%= message %></div>
			<% end %>
	</div>	

	<div>
		<%= form.submit %>
	</div>
<% end %>		